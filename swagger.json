{
 "openapi": "3.0.0",
 "info": {
  "title": "API Documentation",
  "version": "version: '1.0'",
  "description": "Documentation for API"
 },
 "servers": [
  {
   "url": "http://localhost:3000"
  }
 ],
 "tags": [
  {
   "name": "API functions",
   "description": "API functions of application"
  }
 ],
 "paths": {
  "/health-check/": {
   "get": {
    "summary": "Checking the server's health",
    "description": "Returns a JSON response indicating that the server is running",
    "tags": [
     "API functions"
    ],
    "responses": {
     "200": {
      "description": "OK",
      "content": {
       "application/json": {
        "schema": {
         "type": "object",
         "properties": {
          "status": {
           "type": "string",
           "example": "Server is up and running"
          }
         }
        }
       }
      }
     }
    }
   }
  },
   "/user/{id}": {
    "get": {
      "summary": "Returns user by id",
      "description": "Returns a JSON response containing the user found by id",
      "tags": ["API functions"],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "User id",
          "schema": {
            "type": "string",
            "example": "1"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user": {
                    "type": "string",
                    "example": { "id": "1", "name": "User name" }
                  }
                }
              }
            }
          }
        },
        "404": {
          "description": "User not found",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string",
                    "example": "User not found"
                  }
                }
              }
            }
          }
        },
        "500": {
          "description": "Internal Server Error",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string",
                    "example": "Internal Server Error"
                  }
                }
              }
            }
          }
        }
      }
    }
   }
 }
}