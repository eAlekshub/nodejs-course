{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES6"],
    "module": "CommonJS",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules"]
}
